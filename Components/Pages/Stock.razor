@page "/stock"
@inject JewelryCatalogService CatalogService

<PageTitle>Shop the Collection</PageTitle>

<h1 class="mb-3">Available pieces</h1>
<p class="text-muted mb-4">Browse a rotating collection of pressed flower jewelry and home goods. Each piece ships with a card that shares the story of its flowers.</p>

@if (items == null)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3">Loading the garden...</p>
    </div>
}
else if (!items.Any())
{
    <div class="alert alert-info">We're pressing new blooms right now. Check back soon or request something custom.</div>
}
else
{
    <div class="row g-4">
        @foreach (var item in items)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 product-card">
                    <div class="product-image" style=$"background-image:url('{item.ImageUrl ?? "images/placeholder.jpg"}')"></div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            <span class="badge @(item.IsAvailable ? "text-bg-success" : "text-bg-secondary")">@(item.IsAvailable ? "Ready" : "Made to order")</span>
                        </div>
                        <div class="text-muted small">@item.Category</div>
                        <p class="card-text mt-2">@item.Description</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">@item.Price.ToString("C0")</div>
                                <div class="text-muted small">Lead time: @item.LeadTimeDays day(s)</div>
                            </div>
                            <button class="btn btn-outline-primary" disabled>Secure Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<section class="mt-5 p-4 rounded-4 bg-light border">
    <h4>Prefer to commission something special?</h4>
    <p class="mb-3">We can embed your own blooms or forage new florals for you. Custom pieces use the same secure embedded payment flows with clear invoices.</p>
    <NavLink class="btn btn-primary" href="custom">Start a custom design</NavLink>
</section>

@code {
    private List<JewelryItem>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await CatalogService.GetAvailableItemsAsync();
    }
}
